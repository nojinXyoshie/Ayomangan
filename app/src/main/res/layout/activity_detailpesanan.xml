<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yoshievinsmoke.ayomangan.detailpesanan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="Detail Pesanan" />

        <TextView
            android:id="@+id/nama_makanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:text="Nama makanan"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/foto_makanan"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/seblak" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:orientation="vertical">


                <Button
                    style="@style/btn"
                    android:id="@+id/btntrack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#009e0f"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="Mulai Tracking"
                    android:textColor="#fff" />

                <Button
                    style="@style/btn"
                    android:id="@+id/btntelp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#009e0f"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="Telepon kurir"
                    android:textColor="#fff" />


            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/jumlah"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Jumlah : 2 Porsi" />

        <TextView
            android:id="@+id/total_harga"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Total Harga : Rp. 30.000" />

        <TextView
            android:id="@+id/alamat"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Alamat : " />

        <Button
            android:id="@+id/konfir"
            style="@style/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:background="#009e0f"
            android:text="Konfirmasi pesanan sampai"

            android:textColor="#fff" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
