<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.yoshievinsmoke.ayomangan.CustomerActivity">


    <TextView
        android:id="@+id/txt_data"
        android:paddingTop="30dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="20dp"
        android:text="Detail Makanan"
        android:paddingBottom="20dp"
        />

    <TableLayout
        android:id="@+id/kategori"
        android:paddingTop="18dip"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <TableRow
            android:background="@android:color/background_light">
        </TableRow>

    </TableLayout>
    <TableLayout
        android:paddingTop="70dp"
        android:layout_below="@+id/kategori"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/tableInput">
        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="Id Makanan"
                android:textSize="15dp"
                android:paddingLeft="10dip"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_column="1"
                android:text=":"
                android:textSize="15dp"
                android:paddingLeft="10dip"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/txtdet_id_makanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/txt_id_toko"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background_normal"/>
        </TableRow>


        <TableRow
            android:layout_marginTop="16dp">
            <TextView
                android:layout_column="1"
                android:text="Nama Makanan"
                android:textSize="15dp"
                android:paddingLeft="10dip"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_column="1"
                android:text=":"
                android:textSize="15dp"
                android:paddingLeft="10dip"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/txtdet_NamaMakanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tableLayout"
                android:layout_below="@+id/tableLayout"
                android:ems="20"
                android:inputType="text"/>

        </TableRow>
        <TableRow
            android:layout_marginTop="16dp">
            <TextView
                android:layout_column="1"
                android:text="Harga "
                android:textSize="15dp"
                android:paddingLeft="10dip"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_column="1"
                android:text=":"
                android:textSize="15dp"
                android:paddingLeft="10dip"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/txtdet_Harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tableLayout"
                android:layout_below="@+id/tableLayout"
                android:ems="20"
                android:inputType="number"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="16dp">
            <TextView
                android:layout_column="1"
                android:text="Jumlah"
                android:textSize="15dp"
                android:paddingLeft="10dip"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_column="1"
                android:text=":"
                android:textSize="15dp"
                android:paddingLeft="10dip"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/txtdet_Jumlah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tableLayout"
                android:layout_below="@+id/tableLayout"
                android:ems="20"
                android:inputType="text"/>
        </TableRow>
    </TableLayout>
    <TableLayout
        android:layout_marginTop="310dp"
        android:layout_below="@+id/kategori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/tableBtn">
        <TableRow>
            <Button
                android:layout_column="1"
                android:id="@+id/btnOrder"
                android:text="Oder"/>
        </TableRow>
    </TableLayout>

</RelativeLayout>
