<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yoshievinsmoke.ayomangan.UpdateKurir">


    <TextView
        android:id="@+id/txt_data"
        android:paddingTop="20dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="20dp"
        android:text="Edit Kurir"
        android:paddingBottom="10dp"
        />

    <TableLayout
        android:paddingTop="70dp"
        android:layout_below="@+id/kategori"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/tableInput">
        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="Id Kurir"
                android:textSize="15dp"
                android:paddingLeft="10dip"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_column="1"
                android:text=":"
                android:textSize="15dp"
                android:paddingLeft="10dip"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:editable="false"
                android:id="@+id/txted_id_kurir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tableLayout"
                android:layout_below="@+id/tableLayout"
                android:ems="20"
                android:inputType="text"/>

        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="Nama Kurir"
                android:textSize="15dp"
                android:paddingLeft="10dip"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_column="1"
                android:text=":"
                android:textSize="15dp"
                android:paddingLeft="10dip"
                android:layout_gravity="center_vertical"/>
            <EditText
                android:id="@+id/txted_NamaKurir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tableLayout"
                android:layout_below="@+id/tableLayout"
                android:ems="20"
                android:inputType="text"/>

        </TableRow>
        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="Alamat"
                android:textSize="15dp"
                android:paddingLeft="10dip"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_column="1"
                android:text=":"
                android:textSize="15dp"
                android:paddingLeft="10dip"
                android:layout_gravity="center_vertical"/>
            <EditText
                android:id="@+id/txted_Alamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tableLayout"
                android:layout_below="@+id/tableLayout"
                android:ems="20"
                android:inputType="number"/>
        </TableRow>
    </TableLayout>
    <TableLayout
        android:layout_marginTop="360dp"
        android:layout_below="@+id/kategori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/tableBtn">
        <TableRow>
            <Button
                android:layout_column="1"
                android:id="@+id/btnBatal"
                android:text="Batal"
                android:layout_marginLeft="150dp"/>
            <Button
                android:id="@+id/btnSimpan"
                android:text="Simpan"/>
        </TableRow>
    </TableLayout>

</RelativeLayout>
